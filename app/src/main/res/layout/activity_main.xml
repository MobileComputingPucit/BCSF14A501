<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="40dp"
    android:paddingRight="16dp"
    android:paddingTop="25dp"
    tools:context="com.delaroystudios.studentmgt.StudentMainActivity" >


    <EditText
        android:id="@+id/roll_no"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:hint="Enter your Roll number :"
        android:inputType="text"
        android:background="@drawable/edit_text_style"/>

        <requestFocus />


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="Enter Your Name :"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_style"/>


    <EditText
        android:id="@+id/marks"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:hint="Enter Marks :"
        android:inputType="number"
        android:gravity="center"
        android:background="@drawable/edit_text_style"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/addbtn"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/bag"
            android:text="@string/Add_Record"
            android:textSize="12sp" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/d"
            android:text="@string/Delete_Record"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="98dp">

        <Button
            android:id="@+id/modifybtn"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/edit"
            android:text="@string/Edit_Record"
            android:textSize="12sp" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:drawableLeft="@drawable/view"
            android:text="@string/View_Record"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <Button
            android:id="@+id/viewallbtn"
            android:layout_width="143dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search"
            android:text="@string/View_all"
            android:textSize="12sp" />

        <Button
            android:id="@+id/showbtn"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/student"
            android:text="@string/About_me"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>